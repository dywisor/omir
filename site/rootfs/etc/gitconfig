[core]
	editor = /usr/local/bin/vim

[color]
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	showbranch = auto
	status = auto
	ui = auto

[push]
	default = matching

[merge]
	defaultToUpstream = true

[pull]
	ff = only

[alias]
	addu = add --update
	s = status
	ss = status .
	ds = diff --stat
	dss = diff --stat --staged
	dc = diff --staged
	dshead = diff --stat HEAD
	dhead = diff HEAD
	unstage = reset HEAD --
	j = checkout
	br = branch
	x = ls-remote
	new = checkout-b
	logs = log --stat
