# whether to generate /etc/ssh/sshd_config from template
OFEAT_SSHD_CONFIG=1

# create and mount ramdisk at /ram?
OFEAT_RAMDISK=1

# create per-user directories for root#
# and all users w/ uid >= 1000 in /ram/users/?
#  depends on OFEAT_RAMDISK
OFEAT_RAMDISK_USERDIR=1

# create /ram/log/messages and set up log rotation for it?
#  depends on OFEAT_RAMDISK
OFEAT_RAMDISK_LOG=1

# whether to install git and configure user name/email
# - for user root
# - for unpriv user if OCONF_UNPRIV_USER
OFEAT_GIT=1

# whether to git-check-in /etc
#  depends on OFEAT_GIT
OFEAT_GIT_CHECKIN_ETC=0

# whether to run fw_update -p <local mirror> on first boot
#  depends on OCONF_INSTALLURL_LOCAL
OFEAT_INSTALL_FW=1

# whether to run syspatch on first boot
OFEAT_SYSPATCH=1

# whether to install packages listed in OCONF_PKG_INSTALL on first boot
OFEAT_PKG_INSTALL=1

# whether to remove setup files (/FACTORY/site) when done
OFEAT_AUTO_CLEANUP_FILES=1

# whether to reboot after running rc.firsttime hooks
# if requested by any hook
OFEAT_AUTO_REBOOT=1

